<!doctype html>
<html lang="en">
  <head>
    <% include partials/head %>
    <link href="/stylesheets/home.css" rel="stylesheet" type="text/css" />
    <title>Javascript Toolkit</title>
  </head>

  <body>
    <% include partials/header %>

    <main>
      <section class="categories">
        <% categories.forEach(function (category) { %>
          <article>
            <a href="#<%= category.title.toLowerCase().replace(/\s/g, '-') %>">
              <img src="<%= category.img %>" alt="<%= category.title %>"></img>
            </a>
            <h2><a href="#<%= category.title.toLowerCase().replace(/\s/g, '-') %>"><%= category.title %></a></h2>
            <p><%= category.subtitle %></p>
          </article>
        <% }); %>
      </section>

      <% categories.forEach(function (category) { %>
        <section>
          <a id="<%= category.title.toLowerCase().replace(/\s/g, '-') %>"></a>
          <h1><%= category.title %></h1>
          <p><%= category.description %></p>
          <section class="sub-categories">
            <% category.categories.forEach(function (subCategory) { %>
              <article>
                <h3><a href="<%= subCategory.title.toLowerCase().replace(/\s/g, '-') %>"><%= subCategory.title %></a></h3>
                <ul>
                  <% subCategory.tools.forEach(function (tool) { %>
                    <li><a href="<%= subCategory.title.toLowerCase().replace(/\s/g, '-') %>/<%= tool.href %>.html"><%= tool.title %></a></li>
                  <% }); %>
                </ul>
              </article>
            <% }); %>
          </section>
        </section>
      <% }); %>
    </main>

    <% include partials/footer %>
  </body>
</html>
